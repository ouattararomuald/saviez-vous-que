<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
>

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/post_image_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:viewAspectRatio="1"
  />

  <android.support.v7.widget.AppCompatImageButton
      android:background="@android:color/transparent"
      android:layout_marginStart="@dimen/share_button_margin_left"
      android:layout_marginTop="@dimen/share_button_margin"
      android:layout_marginEnd="@dimen/share_button_margin"
      android:layout_marginBottom="@dimen/share_button_margin"
      android:id="@+id/share_image_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_share"
      tools:src="@drawable/ic_share"
  />

</merge>
